<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarritoActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:background="#2AFF2E">

        <ImageButton
            android:id="@+id/perfilbtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_person_24"
            android:background="@drawable/buttons"
            android:backgroundTint="@color/design_default_color_primary" />

        <SearchView
            android:queryHint="Buscar"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#1A6200EE"
            android:background="@drawable/buttons"
            android:defaultFocusHighlightEnabled="true" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Carrito:"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/design_default_color_primary"
        android:gravity="center"
        android:textSize="32dp"
        android:paddingTop="8dp"
        android:paddingHorizontal="24dp"
        android:paddingBottom="24dp"
        android:background="@drawable/degradado_verde"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/agregarCarritobtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agregar"
            android:layout_margin="8dp"
            android:background="@drawable/buttons"
            android:textColor="#1AFF00"/>

        <Button
            android:id="@+id/eliminarCarritobtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:layout_margin="8dp"
            android:background="@drawable/buttons"
            android:textColor="#1AFF00"/>

        <Button
            android:visibility="gone"
            android:id="@+id/guardarCambiosbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="guardar cambios"
            android:layout_margin="8dp"
            android:background="@drawable/buttons"
            android:textColor="#1AFF00"/>

    </LinearLayout>

    <Button
        android:id="@+id/comprarcarritobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/buttons"
        android:gravity="center"
        android:text="comprar carrito"
        android:textColor="#1AFF00" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="16dp"
        android:background="@color/design_default_color_primary"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

