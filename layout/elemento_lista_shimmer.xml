<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_articulo"
    android:layout_width="match_parent"
    android:layout_height="166dp"
    android:background="#fff"
    android:orientation="horizontal"
    android:onClick="producto"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/imagen_info"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/placeholder_background" />

    <LinearLayout
        android:id="@+id/container_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/articulo_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Articulo"
            android:textSize="30dp"
            android:visibility="gone" />

        <View
            android:id="@+id/descripcion_main"
            android:layout_width="130dp"
            android:layout_height="18dp"
            android:fontFamily="sans-serif"
            android:background="@color/placeholder_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/precio_rv"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:background="@color/placeholder_background" />

        </LinearLayout>

        <View
            android:id="@+id/envio_mainActivity"
            android:layout_width="24dp"
            android:layout_height="18dp"
            android:background="@color/placeholder_background"
            android:layout_marginBottom="8dp"/>

        <ImageButton
            android:id="@+id/favorito"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/placeholder_background"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/favoritoOC"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@color/placeholder_background"
            android:visibility="gone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/urlimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Url"
            android:textColor="#1AFF00"/>


    </LinearLayout>

</LinearLayout>